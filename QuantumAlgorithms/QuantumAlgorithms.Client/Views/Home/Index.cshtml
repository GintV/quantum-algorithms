@using IdentityServer4.Extensions
@{
    ViewData["Title"] = "Home";
}

<div class="jumbotron">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>QSolver</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-7">

                <div class="row">
                    <div class="col-md-12">
                        <p>
                            A interactive problem solver for problems whose solutions can benefit from quantum algorithms.
                            Uses quantum simulator to simulate quantum-like effects.
                        </p>

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <p>
                            Open source and free. Get started by browsing the source code or by solving one of the available problems!
                        </p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <a class="btn btn-primary btn-lg" href="https://github.com/GintV/quantum-algorithms"><i class="fa fa-github"></i> Source Code</a>
                        <a class="btn btn-primary btn-lg" asp-controller="Home" asp-action="Solve">Solve</a>
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                <div class="row">
                    @if (!User.IsAuthenticated())
                    {
                        <div class="col-md-12">
                            <p>
                                If you want to use this solver to the fullest, log in or create account if you don't have one already and get access
                                to premium features as well.
                            </p>
                        </div>
                        <div class="col-md-12">
                            <a class="btn btn-primary btn-lg" asp-controller="Authentication" asp-action="Login">Join Us</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h3>Asynchronous solving</h3>
            <p>
                As quantum-like effects can take time to simulate, solving is done using background jobs,
                so you can track the progress of the solution.
            </p>
        </div>
        <div class="col-md-4">
            <h3>
                Solution explanations
            </h3>
            <p>
                Step-by-step explanations are given for every solution.
            </p>
        </div>
        <div class="col-md-4">
            <h3>Quantum simulator</h3>
            <p>
                Deployed to Azure, solver utilizes Azure quantum simulator that can simulate more than 40 qubits.
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <h3>
                Interactive
                <div class="label label-info">
                    Premium
                </div>
            </h3>
            <p>
                You can manage your previous solutions, track ongoing ones or cancel those if you wish.
            </p>
        </div>
        <div class="col-md-4">
            <h3>
                API-available
                <div class="label label-info">
                    Premium
                </div>
            </h3>
            <p>
                Solver is fully API based, so you can use all the functionality in your projects as well.
            </p>
        </div>
        <div class="col-md-4">
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div id="screenshots" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#screenshots" data-slide-to="0" class="active"></li>
                    <li data-target="#screenshots" data-slide-to="1"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="/images/ui/queues.png" alt="Queue List">
                    </div>
                    <div class="item">
                        <img src="/images/ui/retries.png" alt="Retry List">
                    </div>
                </div>

                <!-- Controls -->
                <a class="left carousel-control" href="#screenshots" data-slide="prev">
                    <div class="carousel-arrow-left">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                    </div>
                </a>
                <a class="right carousel-control" href="#screenshots" data-slide="next">
                    <div class="carousel-arrow-right">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
